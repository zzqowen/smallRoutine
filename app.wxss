text{
    font-family: MicroSoft Yahei;
    font-size: 24rpx;
    color: #666;
}

input{
    font-family: MicroSoft YaHei;
}

.flex_container{
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-start;
}
.flex_item_center{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}
.flex_item_between{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}
.flex_column_container{
  display: flex;
  flex-flow: column nowrap;
}
.flex_column_center_container{
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
}
.flex_column_start_container{
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  justify-content: flex-start;
}

.flex-grow {
	flex: 1;
}

.flex-stretch {
	align-items: stretch;
}

.item_center_middle{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.hide{
  opacity: 0;
}