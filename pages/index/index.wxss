/* pages/index/index.wxss */
.body{
  padding: 0 22rpx;
}
.header{
  width: 706rpx;
  height: 340rpx;
  margin-top: 32rpx;
  border-radius: 10rpx;
  border: 1rpx solid violet;
  display: block;
  text-align: center;
  position: relative;
}
.user_bg{
  position: absolute;
  z-index: -1;
  display: block;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.avatar{
  border-radius: 50%;
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-top: 32rpx;
  vertical-align: top;
}
.nick_name{
  display: block;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 30rpx;
  line-height: 30rpx;
  letter-spacing: 6rpx;
  margin-top: 20rpx;
}
.level{
  width: 100%;
  margin-top: 25rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.level_content{
  background-color: rgba(76, 32, 46, 0.24);
  border-radius: 10rpx;
  width: 180rpx;
  padding-left: 16rpx;
  box-sizing: border-box;
}
.level_img{
  width: 45rpx;
  height: 45rpx;
  display: block;
}
.level_font{
  font-size: 30rpx;
  color: white;
  height: 56rpx;
  vertical-align: top;
  line-height: 56rpx;
}
.content{
  margin-top: 20rpx;
  width: 100%;
}
.list_container{
  flex: 1;
}
.list{
  height: 100rpx;
  width: 100%;
}
.question{
  width: 345rpx;
  height: 446rpx;
  position: relative;
  border-radius: 10rpx;
}
.question_bg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.rank{
  width: 100%;
  height: 260rpx;
  position: relative;
  border-radius: 10rpx;
}
.rank_bg{
  position: absolute;
  right: 0;
  top: 0;
  width: 345rpx;
  height: 100%;
}
.more{
  width: 100%;
  height: 302rpx;
  position: relative;
  border-radius: 10rpx;
  margin-top: 16rpx;

}
.more_bg{
  width: 345rpx;
  height: 100%;
}
.prize{
  position: relative;
  border-radius: 10rpx;
  width: 100%;
  height: 330rpx;
  margin-top: 20rpx;
}
.prize_bg{
  width: 345rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;

}
.setting{
  width: 100%;
  height: 134rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  position: relative;
}
.setting_bg{
  width: 345rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
}