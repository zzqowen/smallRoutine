/* pages/index/index.wxss */
.body{
  padding: 0 20rpx;
}
.header{
  width: 100%;
  height: 200rpx;
  border: 1rpx solid violet;
  display: block;
  text-align: center;
}
.flex_container{
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-start;
}
.flex_column_container{
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  justify-content: flex-end;
}
.content{
  width: 100%;
  border: 1rpx solid black;
}
.list_container{
  flex: 1;
}
.list{
  height: 100rpx;
  border: 1rpx solid blue;
  width: 100%;
}
.avatar{
  border-radius: 50%;
  display: inline-block;
  width: 100rpx;
  height: 100rpx;

}