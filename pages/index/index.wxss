/* pages/index/index.wxss */
.body{
  padding: 0 22rpx;
  overflow: hidden;
}
.body_scroll{
  width: 100%;
  height: 100%;
}
.header{
  width: 706rpx;
  height: 340rpx;
  margin-top: 32rpx;
  border-radius: 10rpx;
  border: 1rpx solid violet;
  display: inline-block;
  text-align: center;
  position: relative;

}
.user_bg{
  position: absolute;
  z-index: -1;
  display: block;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.avatar{
  border-radius: 50%;
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-top: 32rpx;
  vertical-align: top;
}
.nick_name{
  display: block;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 30rpx;
  line-height: 30rpx;
  letter-spacing: 6rpx;
  margin-top: 20rpx;
  height: 30rpx;
}
.level{
  width: 100%;
  margin-top: 25rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.level_content{
  background-color: rgba(76, 32, 46, 0.24);
  border-radius: 10rpx;
  width: 180rpx;
  padding-left: 16rpx;
  box-sizing: border-box;
}
.level_img{
  width: 45rpx;
  height: 45rpx;
  display: block;
}
.level_font{
  font-size: 30rpx;
  color: white;
  height: 56rpx;
  vertical-align: top;
  line-height: 56rpx;
}
.content{
  margin-top: 20rpx;
  width: 100%;
}
.list_container{
  flex: 1;
}
.list{
  height: 100rpx;
  width: 100%;
}
.question{
  width: 345rpx;
  height: 446rpx;
  position: relative;
  border-radius: 10rpx;
}
.question_bg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.rank{
  width: 100%;
  height: 260rpx;
  position: relative;
  border-radius: 10rpx;
}
.rank_bg{
  position: absolute;
  right: 0;
  top: 0;
  width: 345rpx;
  height: 100%;
}
.more{
  width: 100%;
  height: 302rpx;
  position: relative;
  border-radius: 10rpx;
  margin-top: 16rpx;

}
.more_bg{
  width: 345rpx;
  height: 100%;
}
.prize{
  position: relative;
  border-radius: 10rpx;
  width: 100%;
  height: 330rpx;
  margin-top: 20rpx;
}
.prize_bg{
  width: 345rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;

}
.setting{
  width: 100%;
  height: 134rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  position: relative;
}
.setting_bg{
  width: 345rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.setting_popup{
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(76, 32, 46, 0.24);
}
.setting_container{
  width: 500rpx;
  height: 200rpx;
  border-radius: 10rpx;
  background-color: white;
}
.setting_title{
  display: block;
  width: 100%;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center
}
.music{
  margin-top: 40rpx;
}
.music label{
  color: aqua;
}
.switch{
  margin-left: 20rpx;
  width: 120rpx;
  border: 1px solid black;
  height: 50rpx;
  border-radius: 50rpx;
  position: relative;
  background: aqua;
}
.switch::before{
  content: "";
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border: 1px solid black;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  background: white;
  transform: translate(0, -50%);
}
.checked{
  animation: check 200ms linear;
  animation-fill-mode: forwards;
}
.checked::before{
  animation: checkBefore 200ms linear;
  animation-fill-mode: forwards;
}
@keyframes check{
  from{
    background: #ccc;
  }
  to{
    background: aqua;
  }
}
@keyframes checkBefore{
  from{
    left: -2rpx; 
  }
  to{
    left: 62rpx;
  }
}
.unchecked{
  animation: uncheck 200ms linear;
  animation-fill-mode: forwards;
}
.unchecked::before{
  animation: uncheckBefore 200ms linear;
  animation-fill-mode: forwards;
}
@keyframes uncheck{
  from{
    background: aqua;
  }
  to{
    background: #ccc;
  }
}
@keyframes uncheckBefore{
  from{
    left: 62rpx; 
  }
  to{
    left: -2rpx;
  }
}
