}
.level_img{
  width: 45rpx;
  height: 45rpx;
  display: block;
}
.level_font{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: white;
  height: 56rpx;
  vertical-align: top;
  line-height: 56rpx;
}
.content{
  margin-top: 20rpx;
  width: 100%;
}
.list_container{
  flex: 1;
}
.list{
  height: 100rpx;
  width: 100%;
}
.question{
  width: 345rpx;
  height: 446rpx;
  position: relative;
  border-radius: 10rpx;
}
.question_bg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.rank{
  width: 100%;
  height: 260rpx;
  position: relative;
  border-radius: 10rpx;
}
.rank_bg{
  position: absolute;
  right: 0;
  top: 0;
  width: 345rpx;
  height: 100%;
}
.more{
  width: 100%;
  height: 302rpx;
  position: relative;
  border-radius: 10rpx;
  margin-top: 16rpx;

}
.more_bg{
  width: 345rpx;
  height: 100%;
}
.prize{
  position: relative;
  border-radius: 10rpx;
  width: 100%;
  height: 330rpx;
  margin-top: 20rpx;
}
.prize_bg{
  width: 345rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;

}
.setting{
  width: 100%;
  height: 134rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  position: relative;
}
.setting_bg{
  width: 345rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.setting_popup{
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(76, 32, 46, 0.24);
}
.setting_container{
  width: 540rpx;
  height: 290rpx;
  border-radius: 10rpx;
  position: relative;
}
.setting_popup_bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.setting_popup_icon{
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top: 26rpx;
  left: 50%;
  transform: translate(-50%, 0);
}
.setting_title{
  display: block;
  width: 100%;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center
}
.music{
  margin-top: 166rpx;
}
.music text{
  color: #666;
  font-size: 40rpx;
  position: relative;
}
.switch{
  margin-left: 80rpx;
  width: 96rpx;
  height: 48rpx;
  border-radius: 25rpx;
  position: relative;
  background: #ef6293;
}
.switch .switch_item{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  background: white;
}
.checked{
  animation: check 100ms linear;
  animation-fill-mode: forwards;
}
.checked .switch_item{
  animation: checkBefore 100ms linear;
  animation-fill-mode: forwards;
}
@keyframes check{
  from{
    background: #ccc;
  }
  to{
    background: #ef6293;
  }
}
@keyframes checkBefore{
  from{
    left: 2rpx; 
  }
  to{
    left: 50rpx;
  }
}
.unchecked{
  animation: uncheck 100ms linear;
  animation-fill-mode: forwards;
}
.unchecked .switch_item{
  animation: uncheckBefore 100ms linear;
  animation-fill-mode: forwards;
}
@keyframes uncheck{
  from{
    background: #ef6293;
  }
  to{
    background: #ccc;
  }
}
@keyframes uncheckBefore{
  from{
    left: 50rpx; 
  }
  to{
    left: 2rpx;
  }
}
.more_poup{
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(76, 32, 46, 0.24);
}
.more_container{
  height: 414rpx;
  width: 538rpx;
}
.more_popup_bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1
}
