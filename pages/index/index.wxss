/* pages/index/index.wxss */
.body{
  padding: 0 22rpx;
  overflow: hidden;
}
.body_scroll{
  width: 100%;
  height: 100%;
}
.header{
  width: 706rpx;
  height: 340rpx;
  margin-top: 32rpx;
  border-radius: 10rpx;
  border: 1rpx solid violet;
  display: inline-block;
  text-align: center;
  position: relative;

}
.user_bg{
  position: absolute;
  z-index: -1;
  display: block;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.avatar{
  border-radius: 50%;
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-top: 32rpx;
  vertical-align: top;
}
.nick_name{
  display: block;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 30rpx;
  line-height: 30rpx;
  letter-spacing: 6rpx;
  margin-top: 20rpx;
  height: 30rpx;
}
.level{
  width: 100%;
  margin-top: 25rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.level_content{
  background-color: rgba(76, 32, 46, 0.24);
  border-radius: 10rpx;
  width: 180rpx;
  padding-left: 16rpx;
