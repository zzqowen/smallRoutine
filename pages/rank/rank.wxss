/* pages/rank/rank.wxss */
.header{
  width: 100%;
  text-align: center;
}
.rank{
  flex: 1;
  size: 14rpx;
}
.cur{
  color: red;
  border-bottom: 1px solid violet;
}
.content{
  position: relative;
}
.content scroll-view{
  position: absolute;
  top: 0;
  left: 0;
  height: 400rpx;
  border: 1px solid black;
}
.friends_item{
  height: 150rpx;
  margin-bottom: 40rpx;
  border: 1px solid black;
  background-color: aliceblue;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.avatar_content{
  height: 100%;
}
.avatar_img{
  width: 100rpx;
  height: 100rpx;
}