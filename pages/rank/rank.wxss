/* pages/rank/rank.wxss */
.tips{
  background-color: #ed6f9d;
  padding-top: 35rpx;
  padding-bottom: 22rpx;
}
.tips_content{
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: white;
}
.header{
  width: 100%;
  height: 104rpx;
  background-color: #ed6f9d;
  text-align: center;
  position: relative;
}
.center_line{
  border-left: 1rpx solid white;
  height: 52rpx;
}
.rank{
  flex: 1;
  font-size: 40rpx;
  color: white;
  height: 98rpx;
  display: inline-block;
  line-height: 98rpx;
}
.cur{
  color: white;
  border-bottom: 3px solid #4d4d4d;
  border-width: 6rpx;
}
.content{
  flex: 1;
  position: relative
}
.content scroll-view{
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.view_container{
  padding: 45rpx 32rpx 0;
}
.friends_item{
  height: 182rpx;
  margin-bottom: 40rpx;
  background-color: white;
  box-shadow: 0 0 20rpx #ccc;
  position: relative;
}
.self_item{
  background: #8bf5fa;
}
.rank_icon{
  position: absolute;
  left: 0;
  top: 0;
  width: 60rpx;
  height: 70rpx;
}
.rank_font{
  position: absolute;
  left: 0;
  top: 0;
  width: 60rpx;
  height: 70rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: white;
  font-weight: 500;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.avatar_content{
  height: 100%;
  padding-left: 80rpx;
}
.avatar_img{
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
}
.font_content{
  flex: 1;
  height: 100%;
  padding: 22rpx 25rpx 16rpx 18rpx;
  box-sizing: border-box;
}
.rank_text{
  height: 50%;
  justify-content: flex-start;
}
.font_center_line{
  justify-content: space-between;
  border-bottom: 1rpx solid #e6e6e6;
}
.rank_displayName{
  font-size: 34rpx;
  color: #4d4d4d;
}
.rank_time{
  font-size: 24rpx;
  color: #4d4d4d;
}
.rank_nickname{
  font-size: 24rpx;
  color:#4d4d4d;
}
.rank_message{
  font-size: 20rpx;
  color: #666;
  margin-left: 22rpx;
  flex: 1;
}
.world_my_rank{
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
  text-align: center;
  height: 140rpx;
  line-height: 140rpx;
  color: #999;
  width: 100%;
  background: white;
  font-size: 30rpx;
}
.rank_view_container{
  padding-bottom: 140rpx;
}
.self_displayName, .self_time, .self_grade{
  color: #009ba3;
}
.self_message{
  color: #529fa3;
}
.self_line{
  border-color: #529fa3;
}