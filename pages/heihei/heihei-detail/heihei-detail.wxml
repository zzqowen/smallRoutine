
<!--先静后动，先样式再数据-->
<view class="container">
  <image wx:if="{{false}}" class="head-image" src="{{isPlayingMusic?postData.music.coverImg:postData.headImgSrc}}"></image>
  <image wx:if="{{false}}" catchtap="onMusicTap" class="audio" src="{{isPlayingMusic? '/images/music/music-stop.png': '/images/music/music-start.png'}}"></image>
  <view class="author-date">
    <image class="avatar" src="{{server + postData.authorMap.avatar}}"></image>
    <text class="author">{{postData.authorMap.displayname}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{postData.createDate}}</text>
  </view>
  <text class="title">{{postData.title}}</text>
  <view class="tool">
    <view class="circle-img">
      <image wx:if="{{collected}}" catchtap="onColletionTap"  src="/images/icon/collection.png"></image>
      <image wx:else catchtap="onColletionTap" src="/images/icon/collection-anti.png"></image>
      <image catchtap="onShareTap"  class="share-img" src="/images/icon/share.png"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{postData.content}}</text>
  <view class="flex-detail">
    <block wx:for="{{postData.photofiles}}" wx:for-item="item" wx:for-index="idx">
      <image catchtap="showImage" data-src="{{server +  item.src}}" data-srclist="{{postData.photofiles}}" src="{{server + item.srcMin}}"></image>
    </block>
  </view>
  <view style="position: absolute;bottom: 0;width: 100%;">
    <button>偷看</button>
  </view>
</view>