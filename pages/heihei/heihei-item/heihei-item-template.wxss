.post-container{
    flex-direction:column;
    display:flex;
    margin-bottom:40rpx;
    margin-left: 0rpx;
    background-color:#fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}

.post-author-date{
    padding: 20rpx 0;
    margin: 0 10px;
    border-top: 1px solid #333;
}

.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
    border-radius: 50%;
}

.post-date{
    margin-left: 20px;
    vertical-align: middle;
}

.post-image{
    width:100%;
    height:391rpx;
    margin:auto 0;
    vertical-align: top;
}

.post-detail-image{
  width: 100%;
  height: 200rpx;
  vertical-align: top;
}

.post-date{
    font-size:26rpx;
    margin-bottom: 10px;
}
.post-title{
    font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 30rpx;
}
.post-like{
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}

.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;
}

.post-like-font{
    vertical-align:middle;
    margin-right: 20rpx;
}

.image-content{
  position: relative;
}

.image-content text{
  position: absolute;
  left: 50%;
  font-size: 45rpx;
  top: 46%;
  transform: translate(-50%, -50%);

  color: white;
  font-weight: bold;
}

.flex-wrap{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}