/* pages/phone/phone.wxss */
.body{
  padding: 20rpx 20rpx 0;
  box-sizing: border-box;
  background: #eff1f5;
}
.form{
  display: block;
  width: 100%;
  height: 720rpx;
  box-shadow: 0 0 20rpx #ccc;
  border-radius: 10rpx;
  padding: 112rpx 55rpx 0;
  box-sizing: border-box;
  position: relative;
  z-index: 3;
  background-color: white;
}
.section{
  border-bottom: 2rpx solid #e5e5e5;
  height: 110rpx;
}
.section_title{
  font-size: 30rpx;
  color: #4d4d4d;
  margin-right: 42rpx;
  height: 100%;
  font-weight: 400;
  line-height: 110rpx;
}
input{
  flex: 1;
  size: 14rpx;
  height: 100%;
}
.input_placeholder{
  color: #ccc;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  font-weight: 100;
}
.get_code_container{
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
}
.get_code{
  border: 1px solid #666;
  border-radius: 5px;
  font-size: 24rpx;
  color: #666;
  width: 152rpx;
  height: 50rpx;
  font-weight: 300;
  line-height: 50rpx;
  text-align: center;
}
.get_code_start{
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 24rpx;
  color: #ccc;
  width: 152rpx;
  height: 50rpx;
  font-weight: 300;
  line-height: 50rpx;
  text-align: center;
}
.btn_area{
  margin-top: 77rpx;
}
.btn_area button{
  background-color: #92a0ff;
  color: white;
  font-size: 40rpx;
  font-weight: 400;
  border-radius: 10rpx;
  letter-spacing: 6rpx;
}
.tips{
  text-align: center;
  font-size: 30rpx;
  color: red;
  height: 40rpx;
  line-height: 40rpx;
  padding-top: 15rpx;
}