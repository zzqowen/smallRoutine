.body{
  width: 100%;
  background: #eff1f5;
}
.header_container{
  position: relative;
  height: 542rpx;
  background-color: #92a0ff;
}
.header_bg{
  width: 100%;
  height: 96rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}

.my_canvas{
  display: block;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translate(0, -50%);
}
.text_content{
  display: block;
  width: 100%;
  text-align: center;
  position: relative;
  padding: 35rpx 40rpx 140rpx;
  box-sizing: border-box;
}
.text_img{
  position: absolute;
  top: 0;
  width: 35rpx;
  height: 40rpx;
}
.left_img{
  left: 144rpx;
}
.right_img{
  right: 144rpx;
}
.font_content{
  height: 126rpx;
  box-shadow: 0 0 20rpx #ccc;
  justify-content: flex-start
}
.flag_container{
  padding-top: 15rpx;
}
.flag_img{
  width: 35rpx;
  height: 40rpx;
}
.flag_nickname{
  font-size: 38rpx;
  color: #666;
  font-weight: bold;
  margin-left: 16rpx;
}
.flag_message{
  color: #808080;
  font-size: 24rpx;
  display: block;
  text-align: center;
}
.button_content{
  padding: 0 64rpx;
}
.button{
  border: 1px solid #abbaff;
  border-width: 2rpx;
  color: #92a0ff;
  border-radius: 10rpx;
  font-size: 30rpx;
  height: 82rpx;
  width: 280rpx;
  line-height: 82rpx;
  text-align: center;
  display: inline-block;
  margin: 0;
  padding: 0;
  background-color: #eff1f5;
  outline: none;
}
.button.photo{
  color: #92a0ff;
  border-color: #92a0ff;
}
.button.friends{
  color: #92a0ff;
  border-color: #92a0ff;
}
.continue{
  text-align: center;
  padding: 0 64rpx;
  box-sizing: border-box;
}
.continue_button{
  display: inline-block;
  color: white;
  font-size: 40rpx;
  background: #92a0ff;
  border-radius: 5px;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-top: 50rpx;
  letter-spacing: 2rpx;
  font-weight: 300;
}
.save_canvas{
  position:absolute;
    /* top: 0;
  left: 0;   */
    top: -100000000000000px;
  left: -100000000000000px;   
}