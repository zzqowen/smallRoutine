.container{
    display: flex;
    flex-direction:column;
    align-items: center;
    background-color:#fff;
}

.avatar{
    width:120rpx;
    height:120rpx;
}

.userInfo-info{
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 30rpx;
}

.userInfo-info .moto{
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  padding: 0 30rpx 0;
}

.userInfo-info .moto text {
  font-size: 30rpx;
}

page{
    height: 100%;
    background-color:#b3d4db;
}

.userInfo-top{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  width: 100%
}

.userInfo-name{
  display:flex;
  flex-flow: column wrap;
  align-items: flex-start;
}

.userInfo-name text{
  line-height: 60rpx;
  margin: 0 30rpx;
}

.userInfo-name .name{
  font-size: 40rpx;
}

.userInfo-name .credit{
  color: violet;
}

.userInfo-top image{
  margin-right: 30rpx;
}

.userInfo-bottom{
  display: flex;
  flex-flow: column wrap;
  width: 100%;
}

.userInfo-bottom .flex-acount{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 42rpx 20rpx;
  border-top: 1px solid #eee;
}

.userInfo-bottom .flex-acount text{
 font-size: 30rpx;
}

.userInfo-bottom .flex-acount image{
  width: 45rpx;
  height: 45rpx;
}

.userInfo-url{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
  width: 100%;
  background-color: #b3d4db;
}

.userInfo-url image{
  width: 40rpx;
  height: 40rpx;
}
