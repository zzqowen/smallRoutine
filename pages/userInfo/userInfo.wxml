<view class="container">
  <view class="userInfo-top">
      <view class="userInfo-name">
        <text class="name">{{userInfo.nickName}}</text>
        <text class="credit">信用积分{{'>'}}</text>
      </view>
      <image class="avatar" style="border-radius: 50%;" src="{{userInfo.avatarUrl}}"></image>
  </view>
  <view class="userInfo-info">
    <view class="moto">
      <text>0</text>
      <text>关注</text>
    </view>
    <view class="moto">
      <text>0</text>
      <text>回答</text>
    </view>
    <view class="moto">
      <text>0</text>
      <text>提问</text>
    </view>
  </view>
  <view class="userInfo-bottom">
    <block wx:for="{{accountList}}" wx:for-item="item" wx:for-index="idx">
      <view class="flex-acount">
        <text>{{item.name}}</text>
        <image src="{{item.img}}"></image>
      </view>
    </block>
  </view>
  <view class="userInfo-url">
    <image src="/images/avatar/wechat_62@2x.png"></image>
    <text style="margin-right: 30rpx;">答尔文(daerwen)</text>
    <image src="/images/avatar/weibo_62@2x.png"></image>
    <text>答尔文(微博)</text>
  </view>
</view>