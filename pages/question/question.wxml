<!--pages/question/question.wxml-->
<view wx:if="{{challengeStatus}}" class='question_body' style='width: {{windowWidth}}px; height: {{windowHeight}}px;'>
  <view class='header'>
    <image src='/images/question/header_bg.png' class='header_bg'></image>
   <canvas class='my_canvas' canvas-id='my_canvas_time' style="width: {{canvasWidth}}px; height: {{canvasWidth}}px"></canvas>
   <text class='category'>{{questionData.category}}</text>
  </view>
  <view class='question'>
    <text>{{idx + 1}}、{{questionData.content}}</text>
  </view>
  <view class="answer">
    <block wx:for="{{answerData}}" wx:for-item="item" wx:for-index="idx">
      <view class='content'>
        <text catchtap='answerTap' data-item="{{item}}">{{item}}</text>
      </view>
    </block>
  </view>
</view>
<view class="result_body" wx:if="{{challengeResult}}" style='width: {{windowWidth}}px; height: {{windowHeight}}px;'>
  <view class='container'>
    <canvas canvas-id='result_question' style='width:{{windowWidth}}px; height:{{2*canvasWidth + 20}}px'></canvas>
  </view>
  <view class="grade">
    <text>{{grade}}</text>
  </view>
  <view class="text">
    <text>{{text}}</text>
  </view>
  <view>
    <button open-type="share" class="friends" catchtap='Page.onShareAppMessage()'>炫耀成绩</button>
  </view>
  <view>
    <button catchtap='continueQuestion'>继续挑战</button>
  </view>
</view>
<view class='waiting_animation flex_column_container' wx:if="{{waitingStatus}}" style='width: {{windowWidth}}px; height: {{windowHeight}}px;'>
  <view class='waiting_content flex_column_container'>
    <text class='count_down'>{{countNum}}</text>
    <text class='waiting_font'>答题准备开始......</text>
  </view>
  <view class='waiting_bottom flex_container'>
    <image src='/images/question/octopus.png' class='bottom_icon4'></image>
    <image src='/images/question/octopus.png' class='bottom_icon3'></image>
    <image src='/images/question/octopus.png' class='bottom_icon2'></image>
    <image src='/images/question/octopus.png' class='bottom_icon1'></image>
  </view>
</view>

