/* pages/question/question.wxss */
.header{
  display: block;
  position: relative;
  border-radius: 10rpx;
  margin: 32rpx 22rpx 0;
  height: 328rpx;
}
.header_bg{
    width: 708rpx;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}
.my_canvas{
  display: block;
  position: absolute;
  left: 50%;
  top: 30rpx;
  transform: translate(-50%, 0);
}
.category{
  width: 100%;
  color: white;
  font-size: 40rpx;
  text-align: center;
  position: absolute;
  bottom: 44rpx;
  left: 0;

}
.question{
  text-align: center;
}
.answer{
  text-align: center;
}
.content text{
  display: inline-block;
  width: 400rpx;
  height: 100rpx;
  border-radius: 5rpx;
  background: #ccc;
  color: white;
  line-height: 100rpx;
  margin-top: 20rpx;
}
.grade{
  text-align: center;
}
.grade text{
  display: inline-block;
  font-size: 100rpx;
  color: blueviolet;
}
.text{
  text-align: center;
}
.text text{
  display: inline-block;
  font-size: 50rpx;
  color: #ccc;
}
.waiting_animation{
  background-color: #ed6f9d;
  align-items: flex-start;
  position: relative;
}
.waiting_content{
  width: 100%;
  align-items: center;
  margin-top: 280rpx;
}
.count_down{
  font-size: 180rpx;
  color: white;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  display: inline-block;
  width: 100%;
  margin-bottom: 110rpx;
  vertical-align: text-top;
}
.waiting_font{
  width: 440rpx;
  height: 80rpx;
  border: 2rpx solid white;
  display: inline-block;
  color: white;
  text-align: center;
  line-height: 80rpx;
  font-size: 40rpx;
  border-radius: 10rpx;
}
.waiting_bottom{
  width: 100%;
  position: absolute;
  bottom: 80rpx;
  left: 0;
  justify-content: center;
  align-items: flex-end;
}
.bottom_icon1{
  width: 65rpx;
  height: 65rpx;
  vertical-align: bottom;
  margin-left: 30rpx;
}
.bottom_icon2{
  width: 80rpx;
  height: 80rpx;
  vertical-align: bottom;
  margin-left: 30rpx;
}
.bottom_icon3{
  width: 95rpx;
  height: 95rpx;
  vertical-align: bottom;
  margin-left: 30rpx;
}
.bottom_icon4{
  width: 115rpx;
  height: 115rpx;
  vertical-align: bottom;
}