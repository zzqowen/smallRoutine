/* pages/question/question.wxss */
.question_body, .result_body, .waiting_animation{
  position: absolute;
  top: 0;
  left: 0;
}
.header{
  display: block;
  position: relative;
  border-radius: 10rpx;
  margin: 32rpx 22rpx 0;
  height: 328rpx;
}
.header_bg{
    width: 708rpx;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}
.my_canvas{
  display: block;
  position: absolute;
  left: 50%;
  top: 30rpx;
  transform: translate(-50%, 0);
}
.category{
  width: 100%;
  color: white;
  font-size: 40rpx;
  text-align: center;
  position: absolute;
  bottom: 44rpx;
  left: 0;

}
.question{
  text-align: center;
  height: 156rpx;
  justify-content: center;
}
.question text{
  font-size: 34rpx;
  color: #4d4d4d;
  font-weight: bold;
  margin: 0 22rpx;
}
.answer{
  text-align: center;
}
.content{
  position: relative;
  margin-top: 20rpx;
}
.choose_icon{
  position: absolute;
  width: 75rpx;
  height: 75rpx;
  right: 48rpx;
  top: 50%;
  transform: translate(0, -50%);
}
.content text{
  display: inline-block;
  width: 706rpx;
  height: 100rpx;
  border-radius: 5rpx;
  background: #ffdeea;
  color: #666;
  font-size: 34rpx;
  line-height: 100rpx;
}
.waiting_animation{
  background-color: #ed6f9d;
  align-items: flex-start;
  position: relative;
}
.waiting_content{
  width: 100%;
  align-items: center;
  margin-top: 280rpx;
}
.count_down{
  font-size: 180rpx;
  color: white;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  display: inline-block;
  width: 100%;
  margin-bottom: 110rpx;
  vertical-align: text-top;
}
.waiting_font{
  width: 440rpx;
  height: 80rpx;
  border: 2rpx solid white;
  display: inline-block;
  color: white;
  text-align: center;
  line-height: 80rpx;
  font-size: 40rpx;
  border-radius: 10rpx;
}
.waiting_bottom{
  width: 100%;
  position: absolute;
  bottom: 80rpx;
  left: 0;
  justify-content: center;
  align-items: flex-end;
}
.bottom_icon1{
  width: 65rpx;
  height: 65rpx;
  vertical-align: bottom;
  margin-left: 30rpx;
  opacity: 0;
}
.bottom_icon2{
  width: 80rpx;
  height: 80rpx;
  vertical-align: bottom;
  margin-left: 30rpx;
  opacity: 0;
}
.bottom_icon3{
  width: 95rpx;
  height: 95rpx;
  vertical-align: bottom;
  margin-left: 30rpx;
  opacity: 0;
}
.bottom_icon4{
  width: 115rpx;
  height: 115rpx;
  vertical-align: bottom;
  opacity: 0;
}
.ani1{
  animation: myAni 4000ms linear 0ms;
  animation-fill-mode: forwards;
}
.ani2{
  animation: myAni 4000ms linear 1000ms;
  animation-fill-mode: forwards;
}
.ani3{
  animation: myAni 4000ms linear 2000ms;
  animation-fill-mode: forwards;
}
.ani4{
  animation: myAni 4000ms linear 3000ms;
  animation-fill-mode: forwards;
}
@keyframes myAni{
  0%{
    opacity: 0;
  }
  25%{
    opacity: 1;
  }
  100%{
    opacity: 1;
  }
}
.content text.choose_right{
  background: -webkit-linear-gradient(top, #bdf249, #739f29);
  color: white;
}
.content text.choose_wrong{
  background: -webkit-linear-gradient(top, #ed6f9d, #f04880);
  color: white;
}
.bottom_button button{
  color: white;
  font-size: 40rpx;
  margin: 0 22rpx;
  border-radius: 5rpx;
  margin-top: 30rpx;
}
.friends{
  background: -webkit-linear-gradient(top, #6896f2, #475db2);
}
.continue{
  background: -webkit-linear-gradient(top, #ed6f9d, #f04880);
}
.result_container{
  position: relative;
  width: 100%;
  height: 542rpx;
  background-color: #f6608e;
}
.result_canvas{
  display: block;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translate(0, -50%);
}
.result_bg{
  width: 100%;
  height: 96rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.text_content{
  display: block;
  width: 100%;
  text-align: center;
  position: relative;
  padding: 35rpx 40rpx 95rpx;
  box-sizing: border-box;
}
.text_img{
  position: absolute;
  top: 0;
  width: 35rpx;
  height: 40rpx;
}
.left_img{
  left: 144rpx;
}
.right_img{
  right: 144rpx;
}
.font_content{
  box-shadow: 0 0 20rpx #ccc;
  justify-content: flex-start
}
.flag_container{
  padding-top: 15rpx;
  padding-bottom: 35rpx;
}
.flag_img{
  width: 35rpx;
  height: 40rpx;
}
.flag_nickname{
  font-size: 30rpx;
  color: #4d4d4d;
  margin-left: 16rpx;
}
.flag_message{
  color: #666;
  font-size: 24rpx;
  display: block;
  margin-top: 22rpx;
}
