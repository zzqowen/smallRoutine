.controls {
  position: relative;
  top: 50%;
  height: 50px;
  margin-top: -25px;
  display: flex;
}
.play,.pause,.time {
  flex: 1;
  height: 100%;
}
.time {
  text-align: center;
  background-color: rgba(0, 0, 0, .5);
  color: white;
  line-height: 50px;
}
.img {
  width: 40px;
  height: 40px;
  margin: 5px auto;
}

.text{
  width: 150px;
  height: 28px;
  display: inline-block;
  text-align: center;
  line-height: 30px;
  font-size: 14px;
  margin-top: -2px;
}

.on{
  border-bottom: 2px solid red;
  color: red;
}